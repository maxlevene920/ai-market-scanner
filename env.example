# AI Market Scanner Environment Configuration
# Copy this file to .env and fill in your API keys

# AI Provider API Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: News API Key for enhanced news scanning
NEWS_API_KEY=your_news_api_key_here

# Optional: Social Media API Keys
TWITTER_API_KEY=your_twitter_api_key_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Optional: Database Configuration
DATABASE_URL=sqlite:///data/market_scanner.db

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/market_scanner.log

# Optional: Scanner Configuration
SCAN_INTERVAL_MINUTES=30
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3

# Optional: Agent Configuration
MODEL_PROVIDER=openai
MODEL_NAME=gpt-4
TEMPERATURE=0.7
MAX_TOKENS=2000
